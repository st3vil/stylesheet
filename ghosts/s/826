Vindego: |
    while (1) {
        J.koe++;
        c&de = 2.27;
        c&dont = 0;
        Rw sleep_if_hot;
        J.rem++ == 0 && 1 &&
            n uncan
        c&dont ||
            n Vinding
        last if delete T.done;
        saygr "Doing";
        sleep 30 + c&de;
    }
Vinding: |
    Jc&tape = 'Dejo';
    
    c&s = 'sc/DT/2017_01_30';
    c&lim = 200;
    c&do = 'ls -1t';
    T.oT.done = Js&bowls > 455;
    
    my $i = Js&bowls++;
    my $on = Js&M ||= Rw Chunkfall;
    my $off = Js&oM ||= [];
    my @got;
    for (1..5) {
        @$on = @$off if !@$on;
        my $n = shift @$on;
        push @$off, $n;
        my $sc;
        sc.src = $n;
        sc.deal = 3.1 if $_ == 3;
        sc.b = $_ == 1 ? 'normal':'difference';
        my $c = c&pc || {};
        n $_.$i=>''=>{pi=>'pape',%$c,lino=>1,rot=>'ends'},$sc
    }
    if (c&pic || 1) {
        my $i = sprintf '%s_%s_%06d', J.t, slm(4,G.oin.id), Js&iini++;
        n phot=>'8'.int(rand 50)=>{}=>{tism=>$i,deal=>0.4}
    }
    n hada=>''=>ada
Chunkfall: | # image list
    c&only = 'images';
    c&s ||= 'eye/Tarf/Photo_serieses';
    my @imgs = Rw Exe;
    if (J.t eq 'Chunkfall') {
        for (@imgs) {
            my $t = $1 if /^c&s\/(.+)$/;
            m $t=>''=>{s=>$_}
        }
    }
    else {
        return \@imgs
    }
    
Photon: |
    Jc&tape = 'Dejo';
    ####
    n Chunkfall=>W=>{grep=>'t'}
    my @le = G&op;
    y.at.hue = 30 * Js&Bowls++;
    my $h = hitime();
    
    n le=>-pud_3=>{dl=>3,s=>\@le};
    
    my $d = G&ron,hitime()-$h;
    n delta=>4=>"Took $d",'dis:1'

