
Opper: | # consolidato
    Js&bowls++ ||
        Rw GhosMe;
    # receive W and switch through same telephone wire
    n Baye
    #return;
    snooze 222;
    n Fish
    n Opera
Opera: | # put instructions together
    Js&ein.bo = 'Doable';
    Jc&tape = 'Dejo:curve:Junov';
    n Opera=>''=>"\nOpera"=>'%fs:15,hs:488'
    
    n Fish=>V
    n ro=>-pud=>{s=>[[G&op ]]}
    
    m Udder=>-comtu=>{s=>G&Ct,[DoSomi=>'W'] }
    m DoSomi=>-comtu=>{s=>G&Ct,[Ghostig=>'W'] }
pi/comtu: |
    y.at.dos = 'Continues';
    
    my $d = G.c.bay."/p";
    my $pid = readlink "$d/C.t";
    G&always,J.sc,atpid=>$pid ||
        n pidchange=>1=>"pidchange",'%hs:666'
    n am=>1=>"d"
    n t=>2=>C.t
    
    
    Js&ope == Js&bowls || return;
    Js&bowls++;
    my $in = "$d/$pid/in";
    write_file($in,{append=>1},sjson(c&s)."\n");
Fish: | # infinite plantulism
    # e receives a new G Ting
    # is their leader/his left-over intelligence
    # starts before everything, with the one thing to do
    # tasted hate street's hangin tree
    # dig in hole hath set me free
    
    # toplevels 4t
    y.at.bg = '3484';
    Jc&tape = 'Dejo:curve:Junov';
    Js&ein.bo = 'Doable';
    n Boat=>V
    #n zoy=>-pud=>{s=>[ G&op,'pi:fish' ]}
    c&s = G.c.bay.'/p';
    c&do = 'ls -1t';
    my @im = Rw Exe;
    n for=>''=>c&s
    y.n = 11;
    my @pi = grep {-d && !-l} @im;
    my @ov = grep {-l} @im;
    
    m $_=>-proc for @pi;
    
    
    
    -s :
    #n Twang
pi/proc: | # picture in picture rock
    my ($p) = $s =~ /(\d+)$/;
    $p || return
        n err=>6=>"No pid: $p",'%hs:254'
        
    y.at.dos = 'Continues';
    n proc=>o1=>'p'
    n id=>1=>$p
    
    -e "/proc/$p" || return
        n gone=>2=>'*'=>'%hs:856'
    my $so = read_file("$s/so");
    n cmd=>3=>$so,'%fs:7,hs:256'
    
    Js&ope || return;
    
DoSomi: |
    Jc&tape = 'Dejo';
    thing:
        is
    n eo=>2=>"s $0",'%hs:774'
    sayre "Is thing";
Continues: | # reactiona
    my $p = e&_hJ;
    ps&ope += us&S ? -1 : 1;
    
GhosMe: | # for ghoster ups
    n Waytch
    5s&desi = "Ghoster";
    

