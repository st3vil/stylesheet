    d:
        lies good
    
SlowIn: |
    my $lim = 4;
    C: my $c;
    c.do = 'ls -1ct';
    c.lim = $lim;
    c.s = $at;
    my $C = G&Ct,[C.t=>''=>$c];
    # or: $C = C C.t $lim $s:at
    my @im = Rw Exe;
    n anMe=>-pud=>{s=>\@im}
    
Sequa: |
    
