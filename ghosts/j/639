Power: |
    # from https://github.com/cisco/ChezScheme/blob/master/examples/power.ss
    (define power
       (lambda (x n)
          (cond
             [(= n 0) 1]
             [(= n 1) x]
             [else
              (let ([q (quotient n 2)])
                 (* (power x q) (power x (- n q))))])))
    
FormShapes: | # stack certain shapes next to each other
    # 
    my @s;
    my @M = @$M;
    my $l;
    while (@M) {
        my $r = shift @M;
        if (ls&shape && ls&shape eq rs&shape) {
            push @s, [$l] unless @s && $s[-1]->[-1] eq $l;
            push @{$s[-1]}, $r;
        }
        $l = $r;
    }
    for my $s (@s) {
        my $i = 0;
        for my $C (@$s) {
            next unless $i++; # first one takes up space
            s&ab = 1;
            s&left = 3 * $i;
        }
    }
    G&give,Budge=>[formshapes=>''=>{s=>\@s}];
    

