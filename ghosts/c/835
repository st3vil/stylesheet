Phot: |
    my $how = G.c.l ? 'ns' : 'seconds';
    (my $t = `date --rfc-3339=$how`) =~ s/[^\d]+/_/sg;
    $t .= '.jpg';
    my $d = "sc/".(G.c.t || J.name);
    `mkdir $d` unless -d $d;
    my $f = "$d/$t";
    `xwd -root | convert - $f`;

